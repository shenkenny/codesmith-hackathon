{
  "name": "Highlightly",
  "version": "1.0",
  "description": "Highlight to the moon!",
  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "activeTab"
  ],
  "icons": {
    "16" : "highlight_16.png",
    "32" : "highlight_32.png",
    "48" : "highlight_48.png",
    "128" : "highlight_128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16" : "highlight_16.png",
      "32" : "highlight_32.png",
      "48" : "highlight_48.png",
      "128" : "highlight_128.png"
    }
  },
  "manifest_version": 2
}
